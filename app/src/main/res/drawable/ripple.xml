<!-- res/drawable/button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="500"
    android:exitFadeDuration="400">
    <item android:state_pressed="true">
        <ripple android:color="#323530" android:effectColor="@color/teal_700"
            >

            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <stroke android:width="3dp"/>
                    <!-- The background color when pressed -->
                </shape>
            </item>
        </ripple></item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke android:width="3dp"/>
            <solid android:color="#D10C0C" /> <!-- The background color when pressed -->
        </shape>
    </item>

</selector>
